<div>
    <small>Sollten Sie nicht automatisch weitergeleitet werden, klicken Sie bitte hier</small>
    <br/><br/>
    <a href="{{ UrlBase }}{{ Route }}" class="btn btn-default">Weiter
        {% if(Timeout is not empty) %}
            <span class="text-muted small">(<span class="ModCountDown"></span>)</span>
        {% endif %}
    </a>
</div>
<br/>
<br/>
<meta http-equiv="Refresh" content="{{ Timeout }}; URL={{ UrlBase }}{{ Route }}" property="">
<!--suppress DynamicallyGeneratedCodeJS -->
<script language=javascript>
    Client.Use('ModCountDown', function()
    {
        {% if Timeout is not empty %}
        jQuery('span.ModCountDown').ModCountDown('{{ Timeout }}');
        {% endif %}
    });
    setTimeout("location.href='{{ UrlBase }}{{ Route }}'", {{ Timeout }}1000);
</script>
