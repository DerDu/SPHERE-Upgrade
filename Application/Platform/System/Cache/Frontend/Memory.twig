{% if( SizeAvailable > 0 ) and ( SizeUsed >= 0 ) and ( SizeFree >= 0 ) %}
    {% set Danger = SizeWasted/SizeAvailable*100 %}
    {% set Warning = SizeUsed/SizeAvailable*100 %}
    {% set Success = SizeFree/SizeAvailable*100 %}
    {% set SizeUsedPercent = 100/SizeAvailable*SizeUsed %}
    <h5>Memory: {{ SizeUsed|number_format(0, '', '.') }} / {{ SizeAvailable|number_format(0, '', '.') }}
        = {{ SizeUsedPercent|number_format(3, ',', '.') }}%</h5>
    <div class="progress progress-striped">
        <div class="progress-bar progress-bar-danger"
             style="width:{{ Danger }}%;">
            <span class="sr-only">Wasted memory</span>
        </div>
        <div class="progress-bar progress-bar-warning"
             style="width:{{ Warning }}%;">
            <span class="sr-only">Used memory</span>
        </div>
        <div class="progress-bar progress-bar-success"
             style="width:{{ Success }}%;">
            <span class="sr-only">Free memory</span>
        </div>
    </div>
{% else %}
    <h5>Memory: Not available</h5>
    <div class="progress progress-striped">
        <div class="progress-bar progress-bar-info" style="width:100%;">
            <span class="sr-only">Not available</span>
        </div>
    </div>
{% endif %}
